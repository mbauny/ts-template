{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Current Test",
			"program": "${workspaceFolder}/node_modules/jest/bin/jest",
			"console": "integratedTerminal",
			"sourceMaps": true,
			"args": [
				"--config",
				"${workspaceFolder}/dev/jest/jest.config.js",
				"--runTestsByPath",
				"${relativeFile}"
			]
		}
	]
}
