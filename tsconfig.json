{
	"compilerOptions": {
		"allowJs": false,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["sources/**/*.ts"]
}
